<UserControl x:Class="Just.iKey.iKeyEditCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Just.iKey"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Just.Base;Component/Theme/Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <UniformGrid VerticalAlignment="Top" Columns="3">
            <TextBox Text="rainbow" />
            <TextBox Text="12345678" />
            <Button Content="重置" Click="Button_Click"/>
        </UniformGrid>
        <TextBox Grid.Row="1" Style="{StaticResource MutliLineBox}" x:Name="TxtLog"/>
    </Grid>
</UserControl>
